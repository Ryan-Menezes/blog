<section class="p-4 border panel">
    <div class="grid-2">
        <div>
            <h2>Postagens</h2>
        </div>
        <div>
            <a href="/painel/postagens/novo" title="Nova Postagem" class="btn btn-primary pull-right">Novo <i class="fa-solid fa-circle-plus"></i></a>
        </div>
    </div>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Visibilidade</th>
                <th>Criado em</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td><a href="{{this.slug}}" target="_blank" title="{{this.title}}">{{this.title}} <i class="fa-solid fa-external-link"></i></a></td>
                <td>
                    {{#if this.visible}}
                    <i class="fa-solid fa-check-circle text-success"></i>
                    {{else}}
                    <i class="fa-solid fa-times-circle text-danger"></i>
                    {{/if}}
                </td>
                <td>{{dateFormat this.created_at}}</td>
                <td>
                    <a href="/painel/postagens/{{this._id}}/editar" class="btn btn-primary" title="Editar Postagem"><i class="fa-solid fa-pencil"></i></a>
                    <a href="/painel/postagens/{{this._id}}/deletar" class="btn btn-danger" title="Deletar Postagem"><i class="fa-solid fa-trash-alt"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>