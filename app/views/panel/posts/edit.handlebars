<section class="p-4 border panel">
    <h2>Editar Postagem</h2>
    <hr>
    <form accept="/painel/usuarios/novo/salvar" method="POST" class="form">
        <div class="form-group">
            <label for="title" class="form-label">Titulo:</label>
            <input type="text" name="title" placeholder="Titulo" id="title" class="form-control">
        </div>

        <div class="grid-2">
            <div class="form-group">
                <label for="slug" class="form-label">Slug:</label>
                <input type="text" name="slug" placeholder="Slug" id="slug" class="form-control">
            </div>
            <div class="form-group">
                <label for="tags" class="form-label">Tags:</label>
                <input type="text" name="tags" placeholder="Tags" id="tags" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="visible" class="form-label">Visibilidade:</label>
            <select name="visible" id="visible" class="form-control">
                <option value="1">Visível</option>
                <option value="0" selected>Invisível</option>
            </select>
        </div>

        <div class="form-group">
            <label for="description" class="form-label">Descrição:</label>
            <textarea type="text" name="description" placeholder="Descrição" id="description" class="form-control" rows="5"></textarea>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">Categorias</div>
            <div class="panel-body">
                <div class="grid-6">
                    <div>
                        <input type="checkbox" name="categories[]" id="filmes">
                        <label for="filmes" class="form-label">Filmes</label>
                    </div>
                    <div>
                        <input type="checkbox" name="categories[]" id="filmes">
                        <label for="filmes" class="form-label">Filmes</label>
                    </div>
                    <div>
                        <input type="checkbox" name="categories[]" id="filmes">
                        <label for="filmes" class="form-label">Filmes</label>
                    </div>
                    <div>
                        <input type="checkbox" name="categories[]" id="filmes">
                        <label for="filmes" class="form-label">Filmes</label>
                    </div>
                    <div>
                        <input type="checkbox" name="categories[]" id="filmes">
                        <label for="filmes" class="form-label">Filmes</label>
                    </div>
                    <div>
                        <input type="checkbox" name="categories[]" id="filmes">
                        <label for="filmes" class="form-label">Filmes</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <label for="text" class="form-label">Conteúdo:</label>
            <textarea class="editor"></textarea>
        </div>

        <button type="submit" class="btn btn-primary p-2">Salvar <i class="fa-solid fa-floppy-disk"></i></button>
    </form>
</section>