<section class="p-4 border panel">
    <h2>Editar Postagem</h2>
    <hr>
    <form action="/painel/postagens/{{post._id}}/editar/salvar" method="POST" class="form">
        <div class="form-group">
            <label for="title" class="form-label">Titulo:</label>
            <input type="text" name="title" placeholder="Titulo" id="title" class="form-control" value="{{post.title}}">
        </div>

        <div class="grid-2">
            <div class="form-group">
                <label for="slug" class="form-label">Slug:</label>
                <input type="text" name="slug" placeholder="Slug" id="slug" class="form-control" value="{{post.slug}}">
            </div>
            <div class="form-group">
                <label for="visible" class="form-label">Visibilidade:</label>
                <select name="visible" id="visible" class="form-control">
                    {{#if post.visible}}
                    <option value="1" selected>Visível</option>
                    <option value="0">Invisível</option>
                    {{else}}
                    <option value="1">Visível</option>
                    <option value="0" selected>Invisível</option>
                    {{/if}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="description" class="form-label">Descrição:</label>
            <textarea type="text" name="description" placeholder="Descrição" id="description" class="form-control" rows="5">{{post.description}}</textarea>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">Categorias</div>
            <div class="panel-body">
                <div class="grid-6">
                    {{#each categories}}
                        {{#if (includes ../post.categories this._id)}}
                        <div>
                            <input type="checkbox" name="categories[]" id="category_{{this._id}}" value="{{this._id}}" checked>
                            <label for="category_{{this._id}}" class="form-label">{{this.name}}</label>
                        </div>
                        {{else}}
                        <div>
                            <input type="checkbox" name="categories[]" id="category_{{this._id}}" value="{{this._id}}">
                            <label for="category_{{this._id}}" class="form-label">{{this.name}}</label>
                        </div>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="mb-4">
            <label for="content" class="form-label">Conteúdo:</label>
            <textarea name="content" id="content" class="editor">{{post.content}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary p-2">Salvar <i class="fa-solid fa-floppy-disk"></i></button>
    </form>
</section>